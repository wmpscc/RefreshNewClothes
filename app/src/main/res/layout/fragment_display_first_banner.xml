<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550px">

    <ImageView
        android:id="@+id/iv_display_first"
        android:layout_width="match_parent"
        android:layout_height="550px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_test_banner01"/>

    <TextView
        android:id="@+id/fst_display_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400px"
        android:background="@drawable/shape_show_deals"
        android:gravity="center"
        android:text="改造前"
        android:textColor="#ffffff"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fst_display_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:gravity="center">

        <ImageView
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_marginRight="5px"
            android:padding="1px"
            android:src="@drawable/banner_gray_radius"/>

        <ImageView
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_marginRight="5px"
            android:padding="1px"
            android:src="@drawable/banner_white_radius"/>

        <ImageView
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_marginRight="5px"
            android:padding="1px"
            android:src="@drawable/banner_white_radius"/>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>
