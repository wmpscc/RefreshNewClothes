<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorOrange"
    android:layout_marginBottom="10dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_mine_user_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="80px"
        android:layout_marginTop="80px"
        android:src="@drawable/ic_user_photo_1"
        app:riv_border_color="@color/colorOrange"
        app:riv_border_width="1dip"
        app:riv_corner_radius="20dip"
        app:riv_mutate_background="true"
        app:riv_oval="true"/>

    <TextView
        android:id="@+id/tv_mine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="150px"
        android:layout_toRightOf="@+id/iv_mine_user_photo"
        android:text="isMyName"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_mine_baseMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mine_name"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/iv_mine_user_photo"
        android:text="基本信息"
        android:textColor="#ccffffff"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/ib_edit_base_message"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tv_mine_name"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/tv_mine_baseMessage"
        android:alpha="0.8"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_base_message"/>

    <ImageButton
        android:id="@+id/ib_start_setting"
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_setting"/>

    <ImageView
        android:id="@+id/iv_order"
        android:layout_width="28dp"
        android:layout_height="33dp"
        android:layout_below="@+id/iv_mine_user_photo"
        android:layout_marginLeft="80px"
        android:layout_marginTop="50px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_order"/>

    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_order"
        android:layout_marginBottom="15px"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@+id/iv_order"
        android:alpha="0.8"
        android:text="订单信息"
        android:textColor="#ffffff"
        android:textSize="17sp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/iv_order"
        android:layout_marginBottom="8px"
        android:layout_marginLeft="60px"
        android:layout_toRightOf="@+id/tv_order"
        android:alpha="0.5"
        android:background="#ffffff"/>

    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/iv_order"
        android:layout_marginLeft="440px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_message"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_order"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/iv_message"
        android:alpha="0.8"
        android:text="消息"
        android:textColor="#ffffff"
        android:textSize="17sp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="29dp"
        android:layout_alignBottom="@+id/iv_order"
        android:layout_marginBottom="8px"
        android:layout_marginLeft="40px"
        android:layout_toRightOf="@+id/tv_message"
        android:alpha="0.5"
        android:background="#ffffff"/>

    <ImageView
        android:id="@+id/iv_designerWindows"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/iv_order"
        android:layout_marginBottom="8px"
        android:layout_marginLeft="730px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_designer_windows"/>

    <TextView
        android:id="@+id/tv_designerWindows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_order"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/iv_designerWindows"
        android:alpha="0.8"
        android:text="我是设计师"
        android:textColor="#ffffff"
        android:textSize="17sp"/>

</com.zhy.autolayout.AutoRelativeLayout>