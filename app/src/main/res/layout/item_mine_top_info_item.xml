<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorOrange">

    <ImageView
        android:id="@+id/iv_mine_user_photo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="80px"
        android:layout_marginTop="80px"
        android:src="@drawable/ic_user_photo_1"/>

    <TextView
        android:id="@+id/tv_mine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150px"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/iv_mine_user_photo"
        android:text="isMyName"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_mine_baseMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mine_name"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/iv_mine_user_photo"
        android:text="基本信息"
        android:textColor="#ccffffff"
        android:textSize="16sp"/>

    <ImageButton
        android:id="@+id/ib_edit_base_message"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/tv_mine_name"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/tv_mine_baseMessage"
        android:alpha="0.8"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_base_message"/>

    <ImageButton
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_setting"/>

    <ImageView
        android:id="@+id/iv_order"
        android:layout_marginLeft="80px"
        android:layout_marginTop="50px"
        android:scaleType="centerCrop"
        android:layout_below="@+id/iv_mine_user_photo"
        android:src="@drawable/ic_order"
        android:layout_width="28dp"
        android:layout_height="33dp"/>

    <TextView
        android:id="@+id/tv_order"
        android:layout_alignBottom="@+id/iv_order"
        android:layout_marginBottom="15px"
        android:layout_marginLeft="10px"
        android:layout_toRightOf="@+id/iv_order"
        android:alpha="0.8"
        android:textColor="#ffffff"
        android:text="订单信息"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginLeft="60px"
        android:layout_marginBottom="8px"
        android:layout_toRightOf="@+id/tv_order"
        android:layout_alignBottom="@+id/iv_order"
        android:alpha="0.5"
        android:background="#ffffff"
        android:layout_width="1dp"
        android:layout_height="29dp"/>
    <ImageView
        android:id="@+id/iv_message"
        android:src="@drawable/ic_message"
        android:scaleType="centerCrop"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/iv_order"
        android:layout_marginLeft="440px"/>
    <TextView
        android:id="@+id/tv_message"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/iv_message"
        android:layout_marginBottom="10px"
        android:layout_alignBottom="@+id/iv_order"
        android:alpha="0.8"
        android:textColor="#ffffff"
        android:textSize="17sp"
        android:text="消息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginLeft="40px"
        android:layout_marginBottom="8px"
        android:layout_toRightOf="@+id/tv_message"
        android:layout_alignBottom="@+id/iv_order"
        android:alpha="0.5"
        android:background="#ffffff"
        android:layout_width="1dp"
        android:layout_height="29dp"/>
    <ImageView
        android:id="@+id/iv_delivery"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_delivery"
        android:layout_width="33dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/iv_order"
        android:layout_marginBottom="8px"
        android:layout_marginLeft="730px"/>
    <TextView
        android:layout_toRightOf="@+id/iv_delivery"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="20px"
        android:layout_alignBottom="@+id/iv_order"
        android:alpha="0.8"
        android:text="物流信息"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</com.zhy.autolayout.AutoRelativeLayout>