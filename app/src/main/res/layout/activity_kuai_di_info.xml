<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wmpscc.refreshnewclothes.Activity.KuaiDiInfoActivity">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout05"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_kuaidi_list_finish"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_triangle_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="物流信息"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="3dp"
            android:background="#cecece"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <RelativeLayout
        android:padding="20dp"
        android:layout_below="@+id/layout05"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="承运商"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_express_deliver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/label01"
            android:text="中通快递"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/label02"
            android:layout_marginTop="20px"
            android:layout_below="@id/label01"
            android:text="快递单号"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="18sp"
            android:layout_marginLeft="20px"
            android:text="000000000011"
            android:layout_toRightOf="@+id/label02"
            android:layout_alignBottom="@id/label02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>
