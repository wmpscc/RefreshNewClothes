<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_recommended_news_picture"
        android:layout_width="match_parent"
        android:layout_height="480px"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_test_banner01"/>

    <TextView
        android:id="@+id/tv_recommended_news_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_recommended_news_picture"
        android:layout_marginTop="10px"
        android:padding="5dp"
        android:text="@string/recommendNews"
        android:textSize="44px"/>
    <View
        android:layout_marginTop="20px"
        android:alpha="0.1"
        android:layout_below="@+id/tv_recommended_news_content"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</com.zhy.autolayout.AutoRelativeLayout>