<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ic_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_logo_login_activity"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_below="@id/iv_logo_login_activity"
        android:orientation="vertical"
        android:layout_margin="90px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="fitCenter"
                android:src="@drawable/ic_user"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <EditText
                android:id="@+id/et_number_logon_activity"
                android:textColorHint="#ffffff"
                android:hint="请输入手机号"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:textColor="#ffffff"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:background="#cecece"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_password"
                    android:scaleType="fitCenter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <EditText
                    android:id="@+id/et_password_logon_activity"
                    android:layout_marginStart="8dp"
                    android:textColorHint="#ffffff"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"/>
            </LinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
        <View
            android:background="#cecece"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/bt_logon_button"
            android:background="#51ffffff"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="登录"
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt_toRegisteredActivity_login_activity"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:text="用户注册"
                android:layout_marginLeft="50dp"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/bt_toRechangeActivity_login_activity"
                android:layout_marginRight="50dp"
                android:text="找回密码"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
