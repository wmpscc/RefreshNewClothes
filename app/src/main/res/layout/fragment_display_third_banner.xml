<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550px">

    <ImageView
        android:id="@+id/iv_user_photo_display"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_user_photo_1"/>

    <TextView
        android:id="@+id/tv_user_name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_user_photo_display"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5px"
        android:text="Your Name"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name_display"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里显示的设计师的个人介绍；这里显示的设计师的个人介绍；这里显示的设计师的个人介绍；这里显..."
            android:textSize="16sp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/thr_focus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400px"
        android:background="@drawable/shape_show_deals"
        android:gravity="center"
        android:text=" 关注 "
        android:textColor="#ffffff"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thr_focus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:gravity="center">

        <ImageView
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_marginRight="5px"
            android:padding="1px"
            android:src="@drawable/banner_white_radius"/>

        <ImageView
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_marginRight="5px"
            android:padding="1px"
            android:src="@drawable/banner_white_radius"/>

        <ImageView
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_marginRight="5px"
            android:padding="1px"
            android:src="@drawable/banner_gray_radius"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
