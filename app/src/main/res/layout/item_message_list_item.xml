<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="3dp">

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_message_list_user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_user_boy_photo"
        app:riv_border_color="@color/colorOrange"
        app:riv_border_width="0dip"
        app:riv_corner_radius="20dip"
        app:riv_mutate_background="true"
        app:riv_oval="true"/>

    <TextView
        android:id="@+id/tv_user_name_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/iv_message_list_user_photo"
        android:alpha="0.8"
        android:text="设计师的名字"
        android:textColor="#000000"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_belief_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_user_name_list"
        android:layout_below="@+id/tv_user_name_list"
        android:text="消息简略显示"/>

    <TextView
        android:id="@+id/tv_content_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10px"
        android:text="刚刚"/>


</com.zhy.autolayout.AutoRelativeLayout>