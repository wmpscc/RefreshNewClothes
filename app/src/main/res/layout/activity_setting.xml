<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wmpscc.refreshnewclothes.Activity.SettingActivity">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/iv_setting_finish"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:adjustViewBounds="true"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_triangle_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="3dp"
            android:background="#cecece"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_below="@id/layout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_setting_logo"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:background="#9fda3e"
            android:src="@drawable/ic_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_below="@+id/iv_setting_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.1"
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <TextView
                android:textSize="20sp"
                android:text="版本更新"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.1"
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <TextView
                android:textSize="20sp"
                android:text="关于我们"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.1"
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <TextView
                android:textSize="20sp"
                android:text="合作联系"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.1"
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <TextView
                android:textSize="20sp"
                android:text="加入我们"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.1"
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>
            <TextView
                android:textSize="20sp"
                android:text="使用协议"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.1"
                android:background="#000000"
                android:layout_width="wrap_content"
                android:layout_height="1dp"/>

        </LinearLayout>





    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>
